@using u21528498_HW4.Models
@model List<u21528498_HW4.Models.Drives>
@{
    ViewBag.Title = "Drives";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />

<img src="~/logo.png" alt="health foundation" style="width: 50px; text-align:center" id="home" />
<script type="text/javascript">
    $('#home').click(function () {
        document.location = '@Url.Action("Index", "Home")';
    })
</script>

<h2>This is a list of all the remaining drives scheduled for this year</h2>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>Aim</th>
            <th>Date</th>
            <th>Province</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Drives drive in Model)
        {
            <tr>
                <td>@drive.Aim</td>
                <td>@drive.Date</td>
                <td>@drive.Province</td>
            </tr>
        }

    </tbody>
</table>
<br />
<br />
<h3> Interested in being part of the awareness drives?</h3>
<br />
<h4> Enter the required details and click the button. You will receive an email with the drive details</h4>
<br />
<form>
    <div class="form-group">
        <label for="email"> Email: </label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" />
    </div>
    <div class="form-group">
        <label for="province"> Province: </label>
        <select class="form-control" id="provinces">
            @foreach (var prov in Model)
            {
                <option>@prov.Province</option>
            }

        </select>
    </div>
