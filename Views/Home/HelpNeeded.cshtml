@model List<u21528498_HW4.Models.HelpNeeded>
@{
    ViewBag.Title = "HelpNeeded";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />

<img src="~/logo.png" alt="health foundation" style="width: 50px; text-align:center" id="home" />
<script type="text/javascript">
    $('#home').click(function () {
        document.location = '@Url.Action("Index", "Home")';
    })
</script>

<h2>The following are the places in need of a helping hand</h2>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>Assistance Needed</th>
            <th>Name</th>
            <th>Province</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inNeed in Model)
        {
            <tr>
                <td>@inNeed.Assistance</td>
                <td>@inNeed.Name</td>
                <td>@inNeed.Province</td>
            </tr>
        }
    </tbody>
</table>

<br />
<p></p>
<h3> Interested in helping out? Click the button below to apply</h3>
<br />
@*button to application form*@
<button type="button" class="btn btn-success" id="volunteer">Volunteer</button>
<script type="text/javascript">
    $('#volunteer').click(function () {
        document.location = '@Url.Action("Application", "Home")';
    })
</script>

