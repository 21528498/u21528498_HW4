@model List<u21528498_HW4.Models.HelpNeeded>
@{
    ViewBag.Title = "Application";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />

<img src="~/logo.png" alt="health foundation" style="width: 50px; text-align:center" id="home" />
<script type="text/javascript">
    $('#home').click(function () {
        document.location = '@Url.Action("Index", "Home")';
    })
</script>

<form>
    <h2>Volunteer application</h2>
    <br />
    <br />

    <div class="form-group">
        <label for="province"> Province: </label>
        <select class="form-control" id="provinces">
            <option>Eastern Cape</option>
            <option>KwaZulu Natal</option>
            <option>Limpopo</option>
            <option>Mpumalanga</option>
            <option>North West</option>
        </select>
    </div>
    <br />
    <br />

    <h2> PERSONAL INFORMATION </h2>
    <br />

    <div class="form-group">
        <label for="name"> Name: </label>
        <input type="text" class="form-control" id="name" placeholder="Enter your name" />
    </div>
    <br />
    <div class="form-group">
        <label for="surname"> Surname: </label>
        <input type="text" class="form-control" id="surname" placeholder="Enter your surname" />
    </div>
    <br />
    <div class="form-group">
        <label for="email"> Email: </label>
        <input type="email" class="form-control" id="email" placeholder="Enter your email" />
    </div>
    <br />
    <div class="form-group">
        <label for="number"> Contact number: </label>
        <input type="number" class="form-control" id="number" placeholder="Enter your contact number" />
    </div>
    <div class="form-group">
        <label for="profession"> Profession </label>
        <input type="text" class="form-control" id="profession" placeholder="Enter your profession" />
    </div>
    <h4> Which mode of communication do you prefer?</h4>
    <div class="radio">
        <label><input type="radio" name="phone" /> SMS </label>
    </div>
    <div class="radio">
        <label><input type="radio" name="email" /> Email </label>
    </div>
    <div class="radio">
        <label><input type="radio" name="any" /> Any </label>
    </div>
    <br />

    <button type="submit" class="btn btn-success" id="submit"> Submit application</button>

</form>
<script type="text/javascript">
    document.getElementById("submit").addEventListener("click", function () {
        alert("Your application has been submitted. We will be in touch");
    })
</script>
